<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowBackground">@drawable/bg_common</item>
    </style>

    <style name="CommonDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_dialog_conn_tip</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="TranslucentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="vpn_state_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="vpn_state_connected_text" parent="vpn_state_text">
        <item name="android:textColor">@color/state_connected</item>
    </style>

    <style name="vpn_state_disconnected_text" parent="vpn_state_text">
        <item name="android:textColor">@color/state_disconnect</item>
    </style>

    <style name="timer_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginEnd">3dp</item>
    </style>
    <style name="timer_number_text" parent="timer_text">
        <item name="android:textSize">36sp</item>
    </style>
    <style name="timer_unit_text" parent="timer_text">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="report_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="report_text_title_1" parent="report_text">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="report_text_content_1" parent="report_text">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="report_text_title_2" parent="report_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="report_text_content_2" parent="report_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="rating_star">
        <item name="layout_constraintHorizontal_chainStyle">spread</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">8dp</item>
        <item name="srcCompat">@drawable/item_rating</item>
    </style>
</resources>