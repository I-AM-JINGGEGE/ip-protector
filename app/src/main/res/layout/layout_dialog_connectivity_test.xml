<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/testing_layout"
        android:layout_width="282dp"
        android:layout_height="215dp"
        android:background="@mipmap/testing_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_testing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/connectivity_testing"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/connectivity_testing_anim"
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:src="@mipmap/testing_img"
            app:layout_constraintTop_toBottomOf="@id/title_testing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/connectivity_test_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/connectivity_test_desc"
            android:textColor="#C9C9C9"
            app:layout_constraintTop_toBottomOf="@id/connectivity_testing_anim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/success_layout"
        android:layout_width="282dp"
        android:layout_height="241dp"
        android:visibility="gone"
        android:background="@mipmap/test_success_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/connectivity_test_success"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_success_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:text="@string/connectivity_test_duration"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/title_success"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_success_message_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            tools:text="122"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ms"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/tv_success_message"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/time_unit_ms"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/tv_success_message_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_success_message_1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_success_got"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="@string/vs_common_dialog_ok"
            android:background="@drawable/bg_btn_common"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_success_retest"
            app:layout_constraintTop_toBottomOf="@id/tv_success_message_1"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_success_retest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="14sp"
            android:text="@string/retest"
            android:textColor="#999999"
            app:layout_constraintTop_toBottomOf="@id/btn_success_got"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="13dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fail_layout"
        android:layout_width="282dp"
        android:layout_height="294dp"
        android:visibility="gone"
        android:background="@mipmap/test_fail_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="@string/connectivity_test_fail"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fail_img"
            android:layout_width="114dp"
            android:layout_height="114dp"
            app:layout_constraintTop_toBottomOf="@id/fail_title"
            android:layout_marginTop="10dp"
            android:src="@mipmap/test_fail_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_fail_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/connectivity_test_fail_desc"
            android:textColor="#C9C9C9"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/fail_img"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fail_retest"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="@string/retest"
            android:background="@drawable/bg_btn_common"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_fail_close"
            app:layout_constraintTop_toBottomOf="@id/tv_fail_message"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_fail_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="14sp"
            android:text="@string/close"
            android:textColor="#999999"
            app:layout_constraintTop_toBottomOf="@id/btn_fail_retest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="13dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
