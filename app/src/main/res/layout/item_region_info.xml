<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/region_flag"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="13dp"
        tools:src="@mipmap/region_flag_default" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/region_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/region_flag"
        app:layout_constraintStart_toEndOf="@id/region_flag"
        app:layout_constraintBottom_toTopOf="@id/region_desc"
        android:layout_marginStart="13dp"
        tools:text="Auto choose" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/region_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textAllCaps="false"
        android:textColor="#818181"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/region_name"
        app:layout_constraintBottom_toBottomOf="@id/region_flag"
        app:layout_constraintStart_toEndOf="@id/region_flag"
        android:layout_marginStart="13dp"
        tools:text="Find best server" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSignal"
        android:layout_width="19dp"
        android:layout_height="12dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/ivSelected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@mipmap/ic_signal_a_5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSelected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@mipmap/ic_unselected" />
</androidx.constraintlayout.widget.ConstraintLayout>