<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@mipmap/ic_back_0"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_title"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="#fffafafa"/>
    <View
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_margin="20dp"
        android:background="@drawable/white_rectangle"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:layout_constraintStart_toStartOf="@+id/background"
        app:layout_constraintEnd_toEndOf="@+id/background"
        app:layout_constraintBottom_toBottomOf="@+id/background"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/info_layout"
        app:layout_constraintStart_toStartOf="@+id/info_layout"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        android:text="@string/summary_body"
        android:textColor="#ff000000"
        android:textSize="14sp" />
    <ImageView
        android:id="@+id/country"
        android:layout_width="31dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="@+id/info_layout"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"/>
    <TextView
        android:id="@+id/region_tv"
        android:layout_width="wrap_content"
        android:layout_height= "wrap_content"
        app:layout_constraintStart_toEndOf="@+id/country"
        app:layout_constraintTop_toTopOf="@+id/country"
        app:layout_constraintBottom_toBottomOf="@+id/country"
        android:layout_marginStart="8dp"
        android:text="@string/region_pre"
        android:textColor="#ff8f8f8f"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/region_tv"
        app:layout_constraintTop_toTopOf="@+id/country"
        app:layout_constraintBottom_toBottomOf="@+id/country"
        android:layout_marginStart="20dp"
        tools:text="00 : 23 : 04" />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9f9f9"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/country"/>
    <TextView
        android:id="@+id/traffic_usage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/traffic_usage"
        android:textColor="#ff000000"
        android:textSize="14sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="@+id/info_layout"/>
    <ImageView
        android:id="@+id/down_iv"
        android:layout_width="14dp"
        android:layout_height="13dp"
        app:layout_constraintStart_toStartOf="@+id/info_layout"
        app:layout_constraintTop_toBottomOf="@+id/traffic_usage_tv"
        app:layout_constraintEnd_toStartOf="@+id/down_tv"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:background="@mipmap/ic_download"/>
    <TextView
        android:id="@+id/down_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff8f8f8f"
        android:textSize="13sp"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@+id/down_iv"
        app:layout_constraintTop_toTopOf="@+id/down_iv"
        app:layout_constraintEnd_toEndOf="@id/v_line"
        app:layout_constraintBottom_toBottomOf="@+id/down_iv"
        tools:text="0.064 K/s"/>
    <View
        android:id="@+id/v_line"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:background="#a7a7a7"
        app:layout_constraintTop_toBottomOf="@+id/traffic_usage_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/down_iv"
        app:layout_constraintBottom_toBottomOf="@+id/down_iv"/>

    <ImageView
        android:id="@+id/up_iv"
        android:layout_width="14dp"
        android:layout_height="13dp"
        app:layout_constraintStart_toEndOf="@+id/v_line"
        app:layout_constraintTop_toBottomOf="@+id/traffic_usage_tv"
        app:layout_constraintEnd_toStartOf="@+id/up_tv"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:background="@mipmap/ic_upload"/>
    <TextView
        android:id="@+id/up_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff8f8f8f"
        android:textSize="13sp"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@+id/up_iv"
        app:layout_constraintTop_toTopOf="@+id/up_iv"
        app:layout_constraintEnd_toEndOf="@id/info_layout"
        app:layout_constraintBottom_toBottomOf="@+id/down_iv"
        tools:text="0.064 K/s"/>
    <FrameLayout
        android:id="@+id/native_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>