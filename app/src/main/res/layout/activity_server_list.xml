<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_menu">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_toolbar_height"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@android:color/transparent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            app:title="@string/vs_feature_region_selector_title"
            app:titleTextColor="@color/black"
            app:navigationIcon="@mipmap/arrow_black_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/servers_refresh_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="11dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                app:srcCompat="@mipmap/ic_refresh"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/container_toolbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="#FAFAFA" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>