<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_marginTop="@dimen/status_bar_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_toolbar_height"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/menu"
            android:layout_width="@dimen/function_icon_size"
            android:layout_height="@dimen/function_icon_size"
            android:padding="@dimen/function_icon_padding"
            android:src="@mipmap/ic_menu"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/report"
            android:layout_width="@dimen/function_icon_size"
            android:layout_height="@dimen/function_icon_size"
            android:padding="@dimen/function_icon_padding"
            android:src="@mipmap/ic_report"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/speed"
            android:layout_width="@dimen/function_icon_size"
            android:layout_height="@dimen/function_icon_size"
            android:padding="@dimen/function_icon_padding"
            android:src="@mipmap/icon_speed_test"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toStartOf="@id/report"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/connect_state_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:gravity="center"
        android:text="@string/vs_common_button_connected"
        android:drawableStart="@mipmap/ic_connected_tag"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        style="@style/vpn_state_connected_text"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@id/connect_anim_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hour_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/hour_unit"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_number_text"
            tools:text="00"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hour_unit"
            app:layout_constraintStart_toEndOf="@id/hour_number"
            app:layout_constraintEnd_toStartOf="@id/minute_number"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_unit_text"
            android:text=":"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/minute_number"
            app:layout_constraintStart_toEndOf="@id/hour_unit"
            app:layout_constraintEnd_toStartOf="@id/minute_unit"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_number_text"
            tools:text="29"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/minute_unit"
            app:layout_constraintStart_toEndOf="@id/minute_number"
            app:layout_constraintEnd_toStartOf="@id/second_number"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_unit_text"
            android:text=":"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/second_number"
            app:layout_constraintStart_toEndOf="@id/minute_unit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_number_text"
            tools:text="02"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connect_anim_layout"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connect_state_text"
        android:layout_marginTop="20dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@mipmap/home_page_button"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/connected_progressbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@mipmap/connecting_progress"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/light_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="46dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/clock_add_time"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/center_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/light_image"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/add_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="@string/lucky_add"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/click_tips_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_layout"
        android:layout_marginTop="20dp"
        android:background="@drawable/under_line_white"
        android:textColor="#D4FFFFFF"
        android:textSize="14sp"
        android:text="@string/vs_will_disconnect_dialog_ok"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/server_inter"
        android:layout_width="180dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="2dp"
        android:layout_height="56dp"
        app:layout_constraintHorizontal_weight="0.65"
        app:layout_constraintEnd_toStartOf="@id/repair_network"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_time_1"
        android:background="@mipmap/server_inter_small"
        android:layout_marginTop="12dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/region_image"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@mipmap/region_flag_default"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/region_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            app:layout_constraintStart_toEndOf="@id/region_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/region_arrow"
            android:layout_marginStart="3dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/region_arrow"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@mipmap/arrow_right"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/repair_network"
        android:layout_width="130dp"
        android:layout_height="0dp"
        android:background="@mipmap/repair_network_bg"
        app:layout_constraintHorizontal_weight="0.35"
        app:layout_constraintStart_toEndOf="@id/server_inter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/server_inter"
        app:layout_constraintBottom_toBottomOf="@id/server_inter"
        android:layout_marginEnd="32dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fixed_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/vs_common_repair_network"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_time_1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="@id/server_inter"
        app:layout_constraintEnd_toEndOf="@id/repair_network"
        app:layout_constraintTop_toBottomOf="@id/click_tips_text"
        android:background="@drawable/bg_btn_common"
        android:layout_marginTop="20dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_time_1_clock"
            android:layout_width="21dp"
            android:layout_height="21dp"
            app:layout_constraintEnd_toStartOf="@id/add_time_2_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginStart="4dp"
            android:src="@mipmap/clock_add_time"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/add_time_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/add_time_1_clock"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/add_time"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/native_ad_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/native_ad_small_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>