<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/bg_connected">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_toolbar_height"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="18dp"
            app:srcCompat="@mipmap/ic_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/report"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            app:srcCompat="@mipmap/ic_report"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/speed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="11dp"
            app:srcCompat="@mipmap/icon_speed_test"
            app:layout_constraintEnd_toStartOf="@id/report"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/connect_state_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:gravity="center"
        android:text="@string/vs_common_button_connected"
        android:drawableStart="@mipmap/ic_connected_tag"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        style="@style/vpn_state_connected_text"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/connect_bg_image"
        app:layout_constraintTop_toBottomOf="@id/connect_state_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/timer_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/connect_state_text"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hour_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/hour_unit"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_number_text"
            tools:text="00"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hour_unit"
            app:layout_constraintStart_toEndOf="@id/hour_number"
            app:layout_constraintEnd_toStartOf="@id/minute_number"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_unit_text"
            android:text="@string/vs_core_service_uptime_unit_hour"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/minute_number"
            app:layout_constraintStart_toEndOf="@id/hour_unit"
            app:layout_constraintEnd_toStartOf="@id/minute_unit"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_number_text"
            tools:text="29"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/minute_unit"
            app:layout_constraintStart_toEndOf="@id/minute_number"
            app:layout_constraintEnd_toStartOf="@id/second_number"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_unit_text"
            android:text="@string/vs_core_service_uptime_unit_minute"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/second_number"
            app:layout_constraintStart_toEndOf="@id/minute_unit"
            app:layout_constraintEnd_toStartOf="@id/second_unit"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/timer_number_text"
            tools:text="02"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/second_unit"
            app:layout_constraintStart_toEndOf="@id/second_number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/timer_unit_text"
            android:text="@string/vs_core_service_uptime_unit_second"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connect_anim_layout"
        android:layout_width="156dp"
        android:layout_height="156dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_layout"
        android:layout_marginTop="20dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/connected_circle_blue"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/connected_wheel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/img_connected_wheel"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@drawable/connected_circle_blue_inner"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/connected_progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_connected_progressbar"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/light_image"
            android:layout_width="44dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@mipmap/ic_connected_lightning"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/center_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/add_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/lucky_add"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/click_tips_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connect_anim_layout"
        android:layout_marginTop="20dp"
        android:background="@drawable/under_line_white"
        android:textColor="#D4FFFFFF"
        android:textSize="14sp"
        android:text="@string/vs_will_disconnect_dialog_ok"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/server_inter"
        android:layout_width="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="12dp"
        android:layout_height="45dp"
        app:layout_constraintHorizontal_weight="0.65"
        app:layout_constraintEnd_toStartOf="@id/repair_network"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_time_1"
        android:background="@drawable/server_inter_bg_blue"
        android:layout_marginTop="12dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/signal"
            android:layout_width="4dp"
            android:layout_height="4dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#14FD54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/region_image"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="9dp"
            app:layout_constraintStart_toEndOf="@id/signal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@mipmap/region_flag_default"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/region_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            app:layout_constraintStart_toEndOf="@id/region_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/region_arrow"
            android:layout_marginStart="3dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/region_arrow"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@mipmap/arrow_right"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/repair_network"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/server_inter_bg_blue"
        app:layout_constraintHorizontal_weight="0.35"
        app:layout_constraintStart_toEndOf="@id/server_inter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/server_inter"
        app:layout_constraintBottom_toBottomOf="@id/server_inter"
        android:layout_marginEnd="32dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fixed_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/vs_common_repair_network"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="12sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_time_1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/click_tips_text"
        android:background="@drawable/fix_network_bg"
        android:layout_marginTop="20dp">
        <org.libpag.PAGView
            android:id="@+id/light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <org.libpag.PAGView
            android:id="@+id/add_time_1_clock"
            android:layout_width="21dp"
            android:layout_height="21dp"
            app:layout_constraintEnd_toStartOf="@id/add_time_2_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginStart="4dp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/add_time_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/add_time_1_clock"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/add_time"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/native_ad_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/native_ad_small_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>